        </profile>
        <profile>
            <id>tomcat</id>
            <properties>
                <tomcat.version>9.0.59</tomcat.version>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven3-plugin</artifactId>
                        <version>${cargo-maven3-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>build-tomcat</id>
                                <goals>
                                    <goal>configure</goal>
                                    <goal>package</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <container>
                                        <containerId>tomcat9x</containerId>
                                        <zipUrlInstaller>
                                            <url>
                                                https://ec.europa.eu/digital-building-blocks/artifact/content/repositories/public/org/apache/tomcat/tomcat/${tomcat.version}/tomcat-${tomcat.version}.zip
                                            </url>
                                            <downloadDir>${project.basedir}/cargo/downloads</downloadDir>
                                            <extractDir>${project.basedir}/cargo/installs</extractDir>
                                        </zipUrlInstaller>
                                    </container>
                                    <packager>
                                        <outputLocation>
                                            ${project.build.directory}/artifacts/domibus-container
                                        </outputLocation>
                                    </packager>
                                    <configuration>
                                        <files>
                                            <file>
                                                <file>${project.basedir}/../../Tomcat/Domibus-MSH-tomcat/src/main/conf/domibus</file>
                                                <todir>conf/domibus</todir>
                                            </file>
                                        </files>
                                    </configuration>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>${replacer.version}</version>
                        <executions>
                            <execution>
                                <id>tomcat-hardening</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <basedir>${project.basedir}/cargo/installs/tomcat-${tomcat.version}/apache-tomcat-${tomcat.version}</basedir>
                                    <outputBasedir>${project.build.directory}</outputBasedir>
                                    <outputDir>replacer</outputDir>
                                    <includes>
                                        <include>conf/server.xml</include>
                                        <include>conf/web.xml</include>
                                    </includes>
                                    <replacements>
                                        <!-- Errors -->
                                        <replacement>
                                            <token>&lt;/web-app&gt;</token>
                                            <value><![CDATA[
<error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
</error-page>
<error-page>
    <error-code>403</error-code>
    <location>/error.jsp</location>
</error-page>
<error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
</error-page>
<error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
</error-page>
</web-app>]]>
                                            </value>
                                        </replacement>
                                        <!-- Cookies -->
                                        <replacement>
                                            <token>&lt;/session-config&gt;</token>
                                            <value> <![CDATA[
    <cookie-config>
        <secure>true</secure>
        <http-only>true</http-only>
    </cookie-config>
</session-config>]]>
                                            </value>
                                        </replacement>
                                        <!-- Remote server shutdown  -->
                                        <replacement>
                                            <!-- setting its value to -1 (i.e. disable the remote shutdown) is not encouraged -->
                                            <token>(&lt;Server.*port=")(\d+)(".*)</token>
                                            <value>$158291$3</value>
                                        </replacement>
                                        <replacement>
                                            <token>(&lt;Server.*shutdown=")(\w+)(".*)</token>
                                            <value>$1DOMIBUSSHUTDOWNCMD$3</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <!-- needed by tomcat-full.xml assembly -->
                                <groupId>${project.groupId}</groupId>
                                <artifactId>domibus-default-ws-plugin</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>domibus-MSH-tomcat-distribution</artifactId>
                                <version>${project.version}</version>
                                <type>war</type>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>make-assembly-tomcat</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/tomcat/tomcat-configuration-only.xml</descriptor>
                                        <descriptor>src/main/assembly/tomcat/tomcat-war.xml</descriptor>
                                        <descriptor>src/main/assembly/tomcat/tomcat-full.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
