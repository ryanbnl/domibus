        </profile>
        <profile>
            <id>wildfly</id>
            <properties>
                <wildfly.version>26.1.0.Final</wildfly.version>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven3-plugin</artifactId>
                        <version>${cargo-maven3-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>build-wildfly</id>
                                <goals>
                                    <goal>configure</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <container>
                                        <containerId>wildfly26x</containerId>
                                        <zipUrlInstaller>
                                            <url>
                                                https://ec.europa.eu/digital-building-blocks/artifact/content/repositories/public/org/wildfly/as/wildfly-as-dist/${wildfly.version}/wildfly-as-dist-${wildfly.version}.zip
                                            </url>
                                            <downloadDir>${project.basedir}/cargo/downloads</downloadDir>
                                            <extractDir>${project.basedir}/cargo/installs</extractDir>
                                        </zipUrlInstaller>
                                    </container>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>${replacer.version}</version>
                        <executions>
                            <execution>
                                <id>wildfly-startup-arguments</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <includes>
                                        <include>
                                            ${project.basedir}/cargo/installs/wildfly-as-dist-${wildfly.version}/wildfly-${wildfly.version}/bin/standalone.conf.bat
                                        </include>
                                        <include>
                                            ${project.basedir}/cargo/installs/wildfly-as-dist-${wildfly.version}/wildfly-${wildfly.version}/bin/standalone.conf
                                        </include>
                                    </includes>
                                    <replacements>
                                        <!-- Please keep the values from the "token" and the "value" fields on one line and do not include any whitespaces -->
                                        <replacement>
                                            <token>"JAVA_OPTS=-Xms64M -Xmx512M -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m"</token>
                                            <value>"JAVA_OPTS=-Xms64M -Xmx512M -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m -Ddomibus.config.location=%JBOSS_HOME%/conf/domibus"</value>
                                        </replacement>
                                        <!-- Please keep the values from the "token" and the "value" fields on one line and do not include any whitespaces -->
                                        <replacement>
                                            <token>JAVA_OPTS="-Xms64m -Xmx512m -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m -Djava.net.preferIPv4Stack=true"</token>
                                            <value>JAVA_OPTS="-Xms64m -Xmx512m -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m -Djava.net.preferIPv4Stack=true -Ddomibus.config.location=\$JBOSS_HOME/conf/domibus"</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>domibus-authentication-dss-extension</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <!-- needed by wildfly-full.xml assembly -->
                                <groupId>${project.groupId}</groupId>
                                <artifactId>domibus-default-ws-plugin</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>domibus-MSH-wildfly</artifactId>
                                <version>${project.version}</version>
                                <type>war</type>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>make-assembly-wildfly</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/wildfly/wildfly-configuration-only.xml</descriptor>
                                        <descriptor>src/main/assembly/wildfly/wildfly-war.xml</descriptor>
                                        <descriptor>src/main/assembly/wildfly/wildfly-full.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
