        </createIndex>
        <createIndex indexName="IDX_TB_EARCHIVEBATCH_UM_B_ID" tableName="TB_EARCHIVEBATCH_UM">
            <column name="FK_EARCHIVE_BATCH_ID"/>
        </createIndex>
        <createTable tableName="TB_EARCHIVE_START">
