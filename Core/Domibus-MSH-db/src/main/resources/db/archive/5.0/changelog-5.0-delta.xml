            </column>
            <column name="FK_EARCHIVE_BATCH_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="FK_USER_MESSAGE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="MESSAGE_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
